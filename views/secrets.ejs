<%- include('partials/header') %>

<section
  class="secrets-section"
  style="background-color: #f8f9fa; min-height: 100vh"
>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="card-title display-4 mb-0">Your Secrets</h1>
          <div>
            <a class="btn btn-light btn-lg me-3" href="/logout" role="button"
              >Log Out</a
            >
            <a class="btn btn-dark btn-lg" href="/submit" role="button"
              >Submit a Secret</a
            >
          </div>
        </div>

        <div class="row">
          <% if (secrets.length > 0) { %> <% secrets.forEach((secret, index) =>
          { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <div
                  class="d-flex justify-content-between align-items-center mb-2"
                >
                  <h5 class="card-title">Secret #<%= index + 1 %></h5>
                  <span
                    class="badge rounded-pill"
                    style="background-color: #<%= secret.color %>"
                  ></span>
                </div>
                <p class="card-text"><%= secret.date %></p>
                <p class="card-text"><%= secret.secret %></p>
                <div class="d-flex justify-content-end">
                  <form
                    action="/secrets/delete"
                    method="POST"
                    style="display: inline"
                  >
                    <input
                      type="hidden"
                      name="user_id"
                      value="<%= user_id %>"
                    />
                    <input
                      type="hidden"
                      name="secretId"
                      value="<%= secret.secret_id %>"
                    />
                    <button type="submit" class="btn btn-danger btn-sm">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="col-12">
            <div class="card shadow-sm">
              <div class="card-body text-center">
                <p class="mb-0">
                  You haven't shared any secrets yet. Come on, we won't judge
                  you (much).
                </p>
                <i class="far fa-smile-wink fa-2x mt-3 text-muted"></i>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
