<%- include('partials/header') %>

<section class="vh-100" style="background-color: #e8ecef">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <div class="image-container">
          <img
            src="images\8134841_3834682.jpg"
            class="img-fluid shadow-lg"
            style="max-width: 100%; height: auto"
            alt="Secrets Illustration"
          />
          <div class="overlay">
            <div class="overlay-content">
              <h3>Your Secrets</h3>
              <p>Safe & Secure</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form action="/register" method="POST">
          <h2 class="text-center mb-4 display-4" style="font-weight: 400">
            Register
          </h2>

          <div class="form-outline mb-4">
            <input
              type="email"
              id="form1Example13"
              class="form-control form-control-lg shadow-sm"
              name="username"
              required
              placeholder="Email address"
            />
          </div>

          <div class="form-outline mb-4">
            <input
              type="password"
              id="form1Example23"
              class="form-control form-control-lg shadow-sm"
              name="password"
              required
              placeholder="Password"
            />
          </div>

          <button type="submit" class="btn btn-dark btn-lg btn-block shadow">
            Create Account
          </button>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold m-auto mb-0 text-muted">OR</p>
          </div>

          <a
            class="btn btn-outline-dark btn-lg btn-block shadow"
            href="/auth/google"
            role="button"
          >
            <i class="fab fa-google me-2"></i> Sign Up with Google
          </a>

          <div class="text-center mt-4">
            <p class="mb-0">
              Already have an account?
              <a href="/login" class="text-dark fw-bold">Log in</a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const canvas = document.getElementById("scratch-canvas");
  const hiddenMessage = document.getElementById("hidden-message");
  const ctx = canvas.getContext("2d");

  // Set canvas dimensions to match hidden message
  const messageRect = hiddenMessage.getBoundingClientRect();
  canvas.width = messageRect.width;
  canvas.height = messageRect.height;

  // Fill canvas with gray color
  ctx.fillStyle = "gray";
  ctx.fillRect(0, 0, canvas.width, canvas.height);

  // Scratch-off functionality
  let isDragging = false;
  canvas.addEventListener("mousedown", (e) => {
    isDragging = true;
    scratch(e);
  });

  canvas.addEventListener("mousemove", (e) => {
    if (isDragging) {
      scratch(e);
    }
  });

  canvas.addEventListener("mouseup", () => {
    isDragging = false;
  });

  function scratch(e) {
    const rect = canvas.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;
    ctx.clearRect(x - 10, y - 10, 20, 20); // Adjust '10' for scratch size
  }
</script>

